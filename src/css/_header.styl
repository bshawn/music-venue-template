.App-header
	display flex
	flex-direction row
	justify-content space-around
	align-items center
	font-weight 400
	margin 0px
	padding 0 1rem
	@media screen and (max-width: 600px)
		flex-direction column
	.logo-mobile
		display none
		@media screen and (max-width: 600px)
			display flex
			filter drop-shadow(0px 0px 20px rgba(255,255,255,0.8))	
			justify-content	center
			margin 2rem 3rem 0px 3rem
			width 100%
			height 21rem
					
	.logo-container
		display flex
		flex-direction row
		justify-content space-around
		align-items center
		@media screen and (max-width: 600px)
			display none
		.site-logo
			width 5rem
			filter drop-shadow(0px 0px 20px rgba(200,200,200,0.5))
		h1
			padding 10px
	.top-right-container
		display flex
		flex-direction column
		justify-content center
.social-icon-container
	// text-align center	
	display flex
	justify-content space-around	
	margin 0px 3rem
	.social-icon
		width 35px
		margin 10px
		padding 0px 10px

.social-footer
	margin 0px 5rem

.icon
	width 100%