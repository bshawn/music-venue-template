.live-events-container
	height 100%
	width 100%
	grid-gap 1rem
	border 1px solid green
	padding 1rem
	margin 0 auto

.event-container
	grid-template-columns repeat(8, 1fr)
	grid-template-rows repeat(8, 1fr)
	grid-gap 1rem
	background #333
	padding .5rem
	border-radius 5px
	height 17rem
	filter drop-shadow(0px 0px 15px rgba(200,200,200,0.5))
	.event-img-container
		grid-row 1/9
		grid-column 1/3
	.event-info-container
		grid-row 1/9
		grid-column 3/7
		text-align center
		.event-header-container 
			grid-row 1
		.event-details-container
			border 1px solid blue
			grid-row 2/3
			.event-date-container
				padding .5rem
			.event-time-price-container
				grid-template-columns 1fr 1fr
		.event-desc-container
			border 1px solid orange
			grid-row 4
			.desc
				margin 0 auto

	.event-links-container
		grid-row 1/9
		grid-column 7/9
		grid-gap .5rem
		text-align center
		.event-tic-btn-container
			grid-row 1/2
		// .event-fb-rsvp-btn
		// .event-add-to-cal-btn

.share-btn-container
	justify-items stretch 
	grid-template-columns repeat(2, 1fr)
