.about-page-container
    flex-direction column

.about-header
    text-align center
    font-size 3rem
    margin 1rem 0px
    letter-spacing 3px
.about-image
    width 40%
    height 40%
    padding 12px 
    @media screen and (max-width: 600px)
        width 100%
        padding 0
.about-content
    // border 1px solid red
    width 88%
    margin 0 auto
    flex-direction column
    font-size 1.3rem
    @media screen and (max-width: 600px)
        font-size 18px
        width 100%
    p
        margin 0 auto
        padding-bottom 1rem
        span 
            color red
        @media screen and (max-width: 600px)
            width 90%
            padding 1rem
            text-align center
    .p1-container
        img
            float right
            position relative
        p
            clear left
            float top
    .p3-container
        img
            float left
            position relative
        p
            clear right
.clearfix
    overflow auto

