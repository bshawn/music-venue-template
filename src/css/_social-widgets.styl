.social-widgets-container
	width 100%
	justify-content space-around
	@media screen and (max-width: 600px)
		flex-direction column
		align-items center

	.social-widget
		display flex
		flex-direction column
		border 1px solid red
		width 20rem
		margin 1rem
		.widget
			border inherit
			border-radius 8px
			height 18rem
			width 100%
			