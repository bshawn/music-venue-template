	
.main-nav
	background linear-gradient(#333, #222)
	border-radius 5px
	display flex
	flex-direction row
	position sticky 
	top 0px
	width 100%
	z-index 2
	.full-nav 
		align-items center
		display flex
		flex-direction row
		justify-content center
		list-style none
		width 100%
		padding 0px
		margin 0 10px
		overflow hidden
		@media screen and (max-width: 600px)
			display none	
		.nav-link
			display flex
			flex-direction column
			justify-content center
			align-items center
			width 15%
			height 3rem
			cursor pointer
			&:hover
				background red
				color #222
				font-weight 900
				font-size 1.5rem
			&.active
				background red
				color #222
				font-weight 900
				font-size 1.5rem
	.mobile-nav
		display none
		@media screen and (max-width: 600px)
			display flex	